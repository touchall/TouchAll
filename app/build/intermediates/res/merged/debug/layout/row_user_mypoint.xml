<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip" >

        <TextView
            android:id="@+id/tv_mypoint_list_index"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No"
            android:background="@drawable/border"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mypoint_list_use_date"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="이용일시"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mypoint_list_store_kind"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="유형"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mypoint_list_store_bonus"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="보너스종류"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/tv_mypoint_list_store_addr"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="소재지"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mypoint_list_storename"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="가맹점명"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mypoint_list_store_type"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="업종"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mypoint_list_paycost"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:text="결제금액"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/tv_mypoint_list_store_use_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="거래구분"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_mypoint_list_point"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/color_1e91d4"
                android:layout_marginRight="10dip"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
